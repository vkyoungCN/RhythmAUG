<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateRhythmActivity"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_ER"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="2dp"
        >
        <com.vkyoungcn.learningtools.myrhythm.customUI.RhythmSingleLineEditor
            android:id="@+id/rh_editor_ER"
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            />


    </android.support.v7.widget.CardView>


    <!--下方按键区-->

    <!--<TextView
        android:id="@+id/tv_Info_rhType_ER"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:textSize="12sp"
        android:gravity="center"
        android:text="@string/str_sharp8"
        android:layout_marginStart="4dp"
        android:background="#757575"
        android:textColor="#efebe9"
        />-->

    <ScrollView
        android:id="@+id/scv_buttonsPanel_ER"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_ER"
        android:layout_marginTop="52dp"
        >

        <!--具体内容开始-->
        <LinearLayout
            android:id="@+id/llt_buttonsPanel_ER"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <include layout="@layout/part_rhythm_special_1" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="#e0e0e0" />

                <include layout="@layout/part_rhythm_short_cut" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="#e0e0e0" />

                <include layout="@layout/part_rhythm_merging" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="#e0e0e0" />

                <include layout="@layout/part_rhythm_dividing" />


            </LinearLayout>
            <!--横分割线-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e0e0e0" />


            <!--音高输入大区-->
            <include layout="@layout/part_pitches_input" />

            <!--横分割线-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e0e0e0" />

            <!--移动区-->
            <include layout="@layout/part_edit_move" />

            <!--横分割线-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e0e0e0" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/defaultArea_bottomInfo" />
            <!--横分割线-->


        </LinearLayout>
    </ScrollView>


</RelativeLayout>