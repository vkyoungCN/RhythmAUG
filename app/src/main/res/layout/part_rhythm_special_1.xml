<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".fragments.MelodyEditorFragment">


    <!--Title-->
    <TextView
        android:id="@+id/tv_titleSpecial_part"
        android:layout_width="82dp"
        android:layout_height="24dp"
        android:layout_marginBottom="4dp"
        android:background="#f5f5f5"
        android:gravity="center"
        android:text="@string/zone_special" />
    <!--横分割线-->
    <TextView
        android:layout_width="82dp"
        android:layout_height="1dp"
        android:layout_marginTop="22dp"
        android:background="@color/myRhythm_orange" />


    <TextView
        android:id="@+id/tv_codeZero"
        android:layout_width="44dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_titleSpecial_part"
        android:layout_margin="1dp"
        android:background="#ffebee"
        android:gravity="center"
        android:text="@string/code_0" />

    <TextView
        android:id="@+id/tv_codeBar"
        android:layout_width="34dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_titleSpecial_part"
        android:layout_margin="1dp"
        android:layout_toRightOf="@+id/tv_codeZero"
        android:background="#f5f5f5"
        android:gravity="center"
        android:textSize="12sp"
        android:text="@string/code_Bar" />


    <TextView
        android:id="@+id/tv_addSection"
        android:layout_width="78dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_codeZero"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:background="#e8eaf6"
        android:gravity="center"
        android:text="@string/addSection" />



</RelativeLayout>