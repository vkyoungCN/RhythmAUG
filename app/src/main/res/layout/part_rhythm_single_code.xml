<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="110dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.MelodyEditorFragment">

    <!--Title-->
    <TextView
        android:id="@+id/tv_title_partDV"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:background="#f5f5f5"
        android:gravity="center"
        android:text="@string/singlePoint" />

    <!--横分割线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/myRhythm_red" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/tv_over_2"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="#efefef"
            android:gravity="center"
            android:text="@string/vb_over_2" />

        <TextView
            android:id="@+id/tv_over_3"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="#efefef"
            android:gravity="center"
            android:text="@string/vb_over_3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/tv_toX"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="#efefef"
            android:gravity="center"
            android:text="@string/str_X" />

        <TextView
            android:id="@+id/tv_toZero"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="#ffebee"
            android:gravity="center"
            android:text="@string/str_0" />


    </LinearLayout>

    <!--<TextView
        android:id="@+id/tv_over_7"
        android:layout_width="38dp"
        android:layout_height="32dp"
        android:layout_below="@+id/tv_dvLine_subT_mCp"
        android:layout_margin="1dp"
        android:layout_toRightOf="@+id/tv_over_5"
        android:background="#efefef"
        android:gravity="center"
        android:text="@string/over_7" />
-->

</LinearLayout>