<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MelodyEditorFragment"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    >

    <!--Title-->
    <TextView
        android:id="@+id/tv_title_part"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:background="#f5f5f5"
        android:gravity="center"
        android:text="@string/zone_move_merge_curve" />
    <!--横分割线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/myRhythm_cyan" />


    <!--按钮区-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/tv_addCurve_PEM"
            android:layout_width="48dp"
            android:layout_margin="2dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="@string/curve"
            android:textSize="12sp"
            android:background="#fff3e0"
            />

        <!--分割线-->
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#e0e0e0"
            android:layout_margin="1dp"
            />

        <TextView
            android:id="@+id/tv_mergeStartCursor_PEM"
            android:layout_width="36dp"
            android:layout_margin="1dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="@string/merge_start"
            android:background="#e8f5e9"
            />
        <TextView
            android:id="@+id/tv_mergeEndCursor_PEM"
            android:layout_width="36dp"
            android:layout_margin="1dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="@string/merge_end"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:background="#e8f5e9"
            />

        <!--分割线-->
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#e0e0e0"
            android:layout_margin="1dp"
            />

        <!--移动按钮组（核心）-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="2dp"
            >
            <TextView
                android:id="@+id/tv_lastSection_PEM"
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="@string/lastSection_2"
                android:background="#f5f5f5"
                android:layout_marginEnd="1dp"
                />

            <TextView
                android:id="@+id/tv_lastUnit_PEM"
                android:layout_width="44dp"
                android:layout_margin="1dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/lastUnit_2"
                android:layout_marginStart="1dp"
                android:background="#f5f5f5"
                />
            <TextView
                android:id="@+id/tv_choseOK_PEM"
                android:layout_width="36dp"
                android:layout_margin="2dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/str_ok"
                android:layout_marginStart="1dp"
                android:background="#efefef"
                />

            <TextView
                android:id="@+id/tv_nextUnit_PEM"
                android:layout_width="44dp"
                android:layout_margin="1dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/nextUnit_2"
                android:layout_marginStart="1dp"
                android:background="#f5f5f5"
                />


            <TextView
                android:id="@+id/tv_nextSection_PEM"
                android:layout_width="44dp"
                android:layout_margin="1dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/nextSection_2"
                android:layout_marginStart="1dp"
                android:background="#f5f5f5"
                />


        </LinearLayout>

        <!--<TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#e0e0e0"
            android:layout_margin="1dp"
            />-->

        <!--<TextView
            android:id="@+id/tv_beatTotal_PEM"
            android:layout_width="48dp"
            android:layout_height="32dp"
            android:layout_margin="2dp"
            android:layout_marginStart="1dp"
            android:background="#e3f2fd"
            android:gravity="center"
            android:text="@string/this_beat" />-->

    </LinearLayout>
</LinearLayout>