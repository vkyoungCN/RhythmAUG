<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="204dp"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp"
    tools:context=".fragments.MelodyEditorFragment">

    <!--Title-->
    <TextView
        android:id="@+id/tv_title_partRM"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:background="#f5f5f5"
        android:gravity="center"
        android:text="@string/zone_move_select" />
    <!--横分割线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/myRhythm_cyan" />


    <!--模式选择区-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!--<TextView
            android:id="@+id/tv_addCurve_PEM"
            android:layout_width="36dp"
            android:layout_margin="2dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="@string/curve"
            android:textSize="12sp"
            android:background="#fff3e0"
            />-->


        <TextView
            android:id="@+id/tv_selectionAreaStart"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="#efefef"
            android:gravity="center"
            android:text="@string/select_start" />

        <TextView
            android:id="@+id/tv_selectSingleCode"
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginStart="1dp"
            android:background="#e8eaf6"
            android:gravity="center"
            android:text="@string/singleCode" />

        <TextView
            android:id="@+id/tv_selectionAreaEnd"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="#efefef"
            android:gravity="center"
            android:text="@string/select_end" />



        <!--分割线-->
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="#e0e0e0" />



        <TextView
            android:id="@+id/tv_selectBeat"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginStart="1dp"
            android:background="#e8f5e9"
            android:gravity="center"
            android:text="@string/singleBeat" />

        <TextView
            android:id="@+id/tv_selectDualBeat"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginStart="1dp"
            android:background="#e8f5e9"
            android:gravity="center"
            android:text="@string/doubleBeats" />


        <!--<TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#e0e0e0"
            android:layout_margin="1dp"
            />-->

        <!--<TextView
            android:id="@+id/tv_beatTotal_PEM"
            android:layout_width="36dp"
            android:layout_height="32dp"
            android:layout_margin="2dp"
            android:layout_marginStart="1dp"
            android:background="#e3f2fd"
            android:gravity="center"
            android:text="@string/this_beat" />-->

    </LinearLayout>

    <!--移动按钮组-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_lastSection_EM"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="#f5f5f5"
            android:gravity="center"
            android:text="@string/lastSection_2" />

        <TextView
            android:id="@+id/tv_lastUnit_EM"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="#f5f5f5"
            android:gravity="center"
            android:text="@string/lastUnit_2" />
        <!--间隔-->
        <TextView
            android:layout_width="4dp"
            android:layout_height="match_parent" />
        <!--<TextView
            android:id="@+id/tv_choseOK_PEM"
            android:layout_width="36dp"
            android:layout_margin="2dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/str_ok"
            android:layout_marginStart="1dp"
            android:background="#efefef"
            />-->

        <TextView
            android:id="@+id/tv_nextUnit_EM"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="#f5f5f5"
            android:gravity="center"
            android:text="@string/nextUnit_2" />


        <TextView
            android:id="@+id/tv_nextSection_EM"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="#f5f5f5"
            android:gravity="center"
            android:text="@string/nextSection_2" />


    </LinearLayout>

</LinearLayout>