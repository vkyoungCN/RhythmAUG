                    android:padding="4dp"
                    android:layout_width="48dp"
                    android:layout_height="42dp"
                    android:src="@drawable/xb3" />




            </LinearLayout>

            <!--行内（按钮与信息栏间）水平分隔线-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#efefef"
                />
            <!--左1.2行：1行按钮的附属信息栏-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_x0_ARA"
                    android:layout_width="48dp"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="@string/str_sharp2" />
                <TextView
                    android:id="@+id/tv_xb1_ARA"
                    android:padding="2dp"
                    android:layout_width="48dp"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:text="@string/str_sharp2"
                    />
                <TextView
                    android:id="@+id/tv_xb2_ARA"
                    android:padding="2dp"
                    android:layout_width="48dp"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:text="@string/str_sharp2"
                    />
                <TextView
                    android:id="@+id/tv_xb3_ARA"
                    android:padding="2dp"
                    android:layout_width="48dp"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:text="@string/str_sharp2"
                    />

            </LinearLayout>

            <!--行间水平分隔线-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffcc80"
                />


            <!--左2.1行：时值按键组2(附点组)-->
