<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddRhythmActivity"
    >
    <LinearLayout
        android:id="@+id/title_ARA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="#efefef"
            android:gravity="center"
            android:text="@string/str_addRhythm_edit"
            android:textSize="16sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/myRhythm_light_green"
            />
    </LinearLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/card_ARA"
        android:layout_below="@id/title_ARA"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="2dp"
        >
        <com.vkyoungcn.learningtools.myrhythm.customUI.RhythmSingleLineEditor
            android:id="@+id/rh_editor_ARA"
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            />


    </android.support.v7.widget.CardView>


    <!--下方按键区-->

    <!--具体内容开始-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="251dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >

        <!--左栏，各时值按键-->
