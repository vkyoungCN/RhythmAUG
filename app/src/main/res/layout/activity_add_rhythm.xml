                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imv_xp_ARA"
                    android:layout_width="48dp"
                    android:layout_height="42dp"
                    android:padding="2dp"
                    android:src="@drawable/xp1" />
                <!--行内（按钮间）竖直分隔线-->
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#efefef"
                    />
                <ImageView
                    android:id="@+id/imv_xpb1_ARA"
                    android:padding="4dp"
                    android:layout_width="48dp"
                    android:layout_height="42dp"
                    android:src="@drawable/xbp1" />
                <!--行内（按钮间）竖直分隔线-->
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#efefef"
                    />
                <ImageView
                    android:id="@+id/imv_xpb2_ARA"
                    android:padding="4dp"
                    android:layout_width="48dp"
                    android:layout_height="42dp"
                    android:src="@drawable/xbp2" />
                <!--行内（按钮间）竖直分隔线-->
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#efefef"
                    />
                <TextView
                    android:id="@+id/tv_empty_ARA"
                    android:layout_width="42dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:text="@string/zero"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:background="#e57373"
                    />




            </LinearLayout>

            <!--行内（按钮与信息栏间）水平分隔线-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#efefef"
                />
            <!--左2.2行：1行按钮的附属信息栏-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_xp_ARA"
                    android:layout_width="48dp"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="@string/str_sharp2" />
                <TextView
                    android:id="@+id/tv_xpb1_ARA"
                    android:padding="2dp"
                    android:layout_width="48dp"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:text="@string/str_sharp2"
                    />
                <TextView
                    android:id="@+id/tv_xpb2_ARA"
                    android:padding="2dp"
                    android:layout_width="48dp"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:text="@string/str_sharp2"
                    />
