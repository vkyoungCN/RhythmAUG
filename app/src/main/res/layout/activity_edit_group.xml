<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RhythmDetailActivity"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="#efefef"
            android:gravity="center"
            android:text="@string/groupDetail"
            android:textSize="16sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/myRhythm_light_green"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_rhId_GEA"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/str_sharp2" />

            <EditText
                android:id="@+id/edt_title_GEA"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:text="@string/str_sharp8"
                android:textColor="@color/myRhythm_orange" />

            <TextView
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_gravity="end"
                android:background="@color/myRhythm_teal"
                android:gravity="center"
                android:onClick="confirmAndBack"
                android:text="@string/confirm" />

        </LinearLayout>

        <!--横分割线-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e0e0e0"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <EditText
                android:id="@+id/edt_description_GEA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:textSize="16sp"

                />
        </ScrollView>



    </LinearLayout>


    <!--底部信息及按键-->
    <TextView
        android:id="@+id/tv_bottomInfo_GEA"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:background="#efefef"
        android:layout_marginBottom="2dp"
        android:text="@string/removeByLongClick"
        />
    <!--底边线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/myRhythm_cyan"
        android:layout_gravity="bottom"
        />
</FrameLayout>