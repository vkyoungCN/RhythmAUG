<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".fragments.MelodyEditorFragment"
    >


    <!--Title-->
    <TextView
        android:id="@+id/tv_titleMerge_part"
        android:layout_width="92dp"
        android:layout_height="24dp"
        android:background="#f5f5f5"
        android:text="@string/zone_merge"
        android:gravity="center"
        android:layout_marginBottom="6dp"
        />
    <!--横分割线-->
    <TextView
        android:layout_width="92dp"
        android:layout_height="1dp"
        android:background="@color/myRhythm_orange"
        android:layout_marginTop="22dp"
        />
    <TextView
        android:id="@+id/tv_merge_left"
        android:layout_below="@+id/tv_titleMerge_part"
        android:layout_width="42dp"
        android:layout_height="36dp"
        android:layout_margin="2dp"
        android:gravity="center"
        android:background="#f5f5f5"
        android:text="@string/merge_left"
        />
    <TextView
        android:id="@+id/tv_merge_right"
        android:layout_below="@+id/tv_titleMerge_part"
        android:layout_toRightOf="@id/tv_merge_left"
        android:layout_width="42dp"
        android:layout_height="36dp"
        android:layout_margin="2dp"
        android:gravity="center"
        android:background="#f5f5f5"
        android:text="@string/merge_right"
        />

    <TextView
        android:id="@+id/tv_merge_bothSide"
        android:layout_width="84dp"
        android:layout_height="36dp"
        android:layout_below="@+id/tv_merge_left"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="10dp"
        android:background="#f5f5f5"
        android:gravity="center"
        android:text="@string/merge" />



</RelativeLayout>