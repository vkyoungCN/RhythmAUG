<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RhythmCreateActivity"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="2dp"
        app:cardCornerRadius="8dp">

        <com.vkyoungcn.learningtools.myrhythm.customUI.LyricEditorBaseOnRSLE
            android:id="@+id/rh_editor_FELP"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"

            />


    </android.support.v7.widget.CardView>




    <!--横分割线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e0e0e0" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="center"
        >
        <!--再加一层llt的意图是控制各控件的高度-->
        <TextView
            android:id="@+id/tv_infoTop_FELP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="2dp"
            android:background="#bdbdbd"
            android:gravity="center"
            android:text="@string/singleDuToModify"
            android:textSize="16sp"
            android:textColor="#ff5722" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <include layout="@layout/part_lyric_phrase_structure" />
            <!--分割线-->
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#e0e0e0" />

            <include layout="@layout/part_lyric_phrase_input_cursor" />
            <!--分割线-->
            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="#e0e0e0" />


        </LinearLayout>

        <!--横分割线-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e0e0e0" />
    </LinearLayout>


    <!--横分割线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e0e0e0" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:gravity="center"
            android:text="@string/totalModify"
            android:background="#efefef"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="50dp"
            >

            <EditText
                android:id="@+id/edt_modifyBH_FELP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:gravity="center"
                android:textColor="#ff5722"
                />
        </ScrollView>

        <!--分割线-->
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="28dp"
            android:background="#e0e0e0" />

        <TextView
            android:id="@+id/tv_syncFromRhv_FELP"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="1dp"
            android:gravity="center"
            android:text="@string/syncByHand"
            android:layout_gravity="end"
            android:background="@color/myRhythm_cyan"
            />
        <TextView
            android:id="@+id/tv_syncToRhv_FELP"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="78dp"
            android:layout_marginEnd="1dp"
            android:gravity="center"
            android:text="@string/syncByHand2"
            android:layout_gravity="end"
            android:background="@color/myRhythm_teal"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/myRhythm_red"
            android:layout_gravity="bottom"
            />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:id="@+id/tv_infoBottom_amount_FELP"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="4dp"
            android:gravity="center"
            android:text="@string/plh_currentAmount"
            android:textColor="@color/myRhythm_green" />
        <TextView
            android:id="@+id/tv_infoBottom_cI_FELP"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="4dp"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:text="@string/plh_currentIndex_LY"
            android:textColor="@color/myRhythm_indigo" />

        <TextView
            android:id="@+id/tv_confirm_FELP"
            android:layout_width="99dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/confirm"
            android:layout_gravity="end"
            android:background="@color/myRhythm_orange"
            />

    </FrameLayout>



</LinearLayout>