<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:background="#efefef"
        android:gravity="center"
        android:text="@string/partConfirmAndInput" />
    <!--横分割线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/myRhythm_light_green" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_onAndOff_EL"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="#e0f7fa"
            android:gravity="center"
            android:text="@string/inputSwitch" />

        <!--分割线-->
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="#e0e0e0" />

        <TextView
            android:id="@+id/tv_addPhrasesTag_EL"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="#e8eaf6"
            android:text="@string/xMinusX"
            android:gravity="center" />
        <TextView
            android:id="@+id/tv_deletePhrasesTag_EL"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="#e8eaf6"
            android:gravity="center"
            android:text="@string/xPlusX"
            />


    </LinearLayout>
</LinearLayout>