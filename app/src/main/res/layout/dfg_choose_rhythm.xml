        <TextView
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="#f5f5f5"
            android:gravity="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            />


    </LinearLayout>-->

    <!--选择区-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="#f5f5f5"
            android:gravity="center"
            android:text="@string/chose_area"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/myRhythm_cyan"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_forChose_CRHD"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            />


    </LinearLayout>


    <!--选定展示-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="#f5f5f5"
            android:gravity="center"
            android:text="@string/chose_done"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/myRhythm_cyan"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_choseDone_CRHD"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            />


    </LinearLayout>

    <!--底部按键区-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#f5f5f5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_choseGpAmount_CRHD"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/plh_choseRhAmount" />

        <TextView
            android:id="@+id/tv_confirmChose_CRHD"
            android:layout_width="99dp"
            android:layout_height="match_parent"
            android:background="@color/myRhythm_teal"
            android:gravity="center"
            android:text="@string/confirm" />


    </LinearLayout>

</LinearLayout>