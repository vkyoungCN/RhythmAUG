<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BackUpActivity"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="#efefef"
        android:gravity="center"
        android:text="@string/backUp2"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:alpha="0.4"
        android:scaleType="centerCrop"
        android:src="@drawable/slash_bar_orange" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        >
       <!-- <TextView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="#f5f5f5"
            android:gravity="center"
            android:text="@string/test"
            android:onClick="privateBackUp"
            />-->

        <FrameLayout
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:background="#f5f5f5"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="@string/local_bak"
                android:textColor="@color/myRhythm_orange"
                android:onClick="privateBackUp"
                android:textSize="24sp" />

        </FrameLayout>


        <TextView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="28dp"
            android:background="#f5f5f5"
            android:gravity="center"
            android:onClick="localRecover"
            android:text="@string/local_ReCover"
            android:textSize="18sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_marginBottom="8dp"
            android:text="@string/actionWitdCaution"
            android:textColor="@color/myRhythm_red"
            />

    </FrameLayout>

    <!--横分割线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e0e0e0"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <TextView
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:background="#f5f5f5"
            android:gravity="center"
            android:text="@string/remote_bak"
            android:textColor="@color/myRhythm_cyan"
            android:onClick="fileSelectBkRemote"
            android:textSize="24sp" />
    </FrameLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/myRhythm_light_green"
        android:layout_gravity="bottom"
        />
    <TextView
        android:id="@+id/tv_rhythmAmount_MA"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingStart="4dp"
        android:paddingEnd="2dp"
        android:gravity="center"
        android:background="#efefef"
        />
</LinearLayout>