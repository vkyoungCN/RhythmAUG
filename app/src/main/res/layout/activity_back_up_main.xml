<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BackUpActivity"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="#efefef"
        android:gravity="center"
        android:text="@string/backUp2"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:alpha="0.4"
        android:scaleType="centerCrop"
        android:src="@drawable/slash_bar_orange" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <TextView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="#f5f5f5"
            android:gravity="center"
            android:text="@string/test"
            android:onClick="bakTest"
            />

        <TextView
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:background="#f5f5f5"
            android:gravity="center"
            android:text="@string/local_bak"
            android:textColor="@color/myRhythm_orange"
            android:onClick="bakToLocal"
            android:textSize="24sp" />

        <TextView
            android:layout_width="72dp"
            android:layout_height="46dp"
            android:layout_gravity="end|bottom"
            android:layout_margin="4dp"
            android:background="#f5f5f5"
            android:gravity="center"
            android:text="@string/local_ReCover"
            android:textColor="@color/myRhythm_orange"
            android:onClick="fileSelectBkLocal"
            android:textSize="24sp" />
    </FrameLayout>

    <!--横分割线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e0e0e0"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <TextView
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:background="#f5f5f5"
            android:gravity="center"
            android:text="@string/remote_bak"
            android:textColor="@color/myRhythm_cyan"
            android:onClick="fileSelectBkRemote"
            android:textSize="24sp" />
    </FrameLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/myRhythm_light_green"
        android:layout_gravity="bottom"
        />
    <TextView
        android:id="@+id/tv_rhythmAmount_MA"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingStart="4dp"
        android:paddingEnd="2dp"
        android:gravity="center"
        android:background="#efefef"
        />
</LinearLayout>