<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.DeleteModelDiaFragment">

    <!--撑开宽度。如果没有具体宽度，即使全用match则宽度也按wrap计算-->
    <TextView
        android:layout_width="300dp"
        android:layout_height="1dp" />

    <!--Title-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#efefef"
        android:text="@string/confirm_delete"
        android:textSize="16sp"
        android:gravity="center"
        />

    <ScrollView
        android:layout_width="300dp"
        android:layout_height="300dp">
        <ImageView
            android:id="@+id/imv_showBitmap_DSB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_gravity="center"
            />
        
    </ScrollView>
 

    <!--横分割线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/myRhythm_red"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        >

        <TextView
            android:id="@+id/btn_cancel_DSB"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_margin="1dp"
            android:text="@string/cancel"
            android:textSize="16sp"
            android:background="#efefef"
            />

        <TextView
            android:id="@+id/btn_ok_DSB"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_margin="1dp"
            android:text="@string/confirm"
            android:textSize="16sp"
            android:background="#e57373"
            />
    </LinearLayout>


</LinearLayout>