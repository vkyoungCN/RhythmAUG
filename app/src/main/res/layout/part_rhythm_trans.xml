<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.MelodyEditorFragment">

    <!--Title-->
    <TextView
        android:id="@+id/tv_title_partTS"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:background="#f5f5f5"
        android:gravity="center"
        android:text="@string/translate" />

    <!--横分割线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/myRhythm_orange" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/tv_toDv"
            android:layout_width="51dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="#efefef"
            android:gravity="center"
            android:text="@string/str_toDv" />

        <TextView
            android:id="@+id/tv_toHaveSpot"
            android:layout_width="51dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="#efefef"
            android:gravity="center"
            android:text="@string/str_withSpot" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/tv_fwd16"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="#efefef"
            android:gravity="center"
            android:text="@string/fwd_16" />

        <TextView
            android:id="@+id/tv_rwd16"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="#efefef"
            android:gravity="center"
            android:text="@string/str_rd16" />


    </LinearLayout>

    <!--<TextView
        android:id="@+id/tv_over_7"
