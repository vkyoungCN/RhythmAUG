<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="220dp"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp"
    tools:context=".fragments.EditorFragmentMelody">

    <!--Title-->
    <TextView
        android:id="@+id/tv_title_partRM"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:background="#f5f5f5"
        android:gravity="center"
        android:text="@string/move" />
    <!--横分割线-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/myRhythm_cyan" />


    <!--模式选择区-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="#efefef"
            android:gravity="center"
            />

        <TextView
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginStart="1dp"
            android:background="#e8eaf6"
            android:gravity="center"
            />

        <TextView
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="#efefef"
            android:gravity="center"
            />



        <!--分割线-->
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="#e0e0e0" />



        <TextView
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginStart="1dp"
            android:background="#e8f5e9"
            android:gravity="center"
            />

        <TextView
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginStart="1dp"
            android:background="#e8f5e9"
            android:gravity="center"
            />



    </LinearLayout>

    <!--移动按钮组-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_lastPhrase_EL"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="#f5f5f5"
            android:gravity="center"
            android:text="@string/lastSection_2" />

        <TextView
            android:id="@+id/tv_lastUnit_EL"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="#f5f5f5"
            android:gravity="center"
            android:text="@string/lastUnit_2" />
        <!--间隔-->
        <TextView
            android:layout_width="4dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_nextUnit_EL"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="#f5f5f5"
            android:gravity="center"
            android:text="@string/nextUnit_2" />


        <TextView
            android:id="@+id/tv_nextPhrase_EL"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="#f5f5f5"
            android:gravity="center"
            android:text="@string/nextSection_2" />


    </LinearLayout>

</LinearLayout>